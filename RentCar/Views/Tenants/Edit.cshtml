@model RentCar.Models.Tenant

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Арендатор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartOfLease" class="control-label"></label>
                <input asp-for="StartOfLease" class="form-control" />
                <span asp-validation-for="StartOfLease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndOfLease" class="control-label"></label>
                <input asp-for="EndOfLease" class="form-control" />
                <span asp-validation-for="EndOfLease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassportDetails" class="control-label"></label>
                <input asp-for="PassportDetails" class="form-control" />
                <span asp-validation-for="PassportDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
