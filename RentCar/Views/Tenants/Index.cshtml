@model IEnumerable<RentCar.Models.Tenant>

@{
    ViewData["Title"] = "Index";
}

<h1>Арендадаторы</h1>

<p>
    <a asp-action="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartOfLease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndOfLease)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassportDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartOfLease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndOfLease)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Подробности</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
